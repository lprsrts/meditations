---
import ThemeToggle from './ThemeToggle';
// ArticleLayout.astro - simplified layout without top bar and images
---

<html lang="tr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>KENDİME DÜŞÜNCELER</title>
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/article.css">
    <script is:inline>
      // Immediately apply the saved theme to prevent flash
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme) {
        document.documentElement.setAttribute('data-theme', savedTheme);
      } else {
        // Initialize with light mode by default
        document.documentElement.setAttribute('data-theme', 'light');
      }
    </script>
  </head>
  <body>
    <ThemeToggle client:load />
    <main class="article">
      <aside class="left-col"></aside>
      <section class="center-col">
        <a href="/" class="back-button">← Ana sayfaya dön</a>
        <slot />
        <a href="/" class="back-button bottom">← Ana sayfaya dön</a>
      </section>
      <aside class="right-col"></aside>
    </main>
  </body>
</html>